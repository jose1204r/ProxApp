@{
}
@model Client

<h2>Update @Model.Company</h2>

@using (Html.BeginForm("UpdateClientToDatabase","Client","Post"))
{



    <label  asp-for="Company" class="control-label">Company</label>
    <input type="text" class=" form-control w-50" asp-for="Company" type="hidden" value="@Model.Company" />
   
    <label asp-for="Phone" class="control-label">Phone</label>
    <input type="text" class="form-control  w-50" name="Phone"  value="@Model.Phone" />
    
    <label asp-for="Address" class="control-label">Address</label>
    <input type="text" class="form-control  w-50" step="0.01" name="Address"  value="@Model.Address" />

    <label asp-for="City" class="control-label">City</label>
    <input type="text" class="form-control w-50" step="0.01" name="City"  value="@Model.City" />

    <label asp-for="Zipcode" class="control-label">Zip Code</label>
    <input type="number" class="form-control w-50" step="0.01" name="Zipcode"  value="@Model.Zipcode" />

    <label asp-for="State" class="control-label">State</label>
    <input type="text" class="form-control  w-50 " step="0.01" name="State" value="@Model.State" />

    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" class="form-control w-50" step="0.01" name="Email"  value="@Model.Email" />
    
    <br />
    <input type="submit" value="Update Customer" class="btn btn-primary" />

}
