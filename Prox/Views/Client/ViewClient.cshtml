        <input  class="btn btn-primary" type="hidden" asp-for="ID" value="@Model.ID" />
        <button class="btn btn-primary" type="submit" onclick="return confirm('Are you sure?')" value="Delete this Customer">Delete</button>







    }
</div>
<br />
<div style="display: block">
    <a class="btn btn-primary" href="/Client/UpdateClient/@Model.ID">Update this Customer</a>
</div>
