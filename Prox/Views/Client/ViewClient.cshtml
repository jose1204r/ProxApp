@model Client


<h3>@Model.Company</h3>


<table id="tableschedule" class="table table-striped table-hover">


    <tr>

        <th>ID</th>
        
        <th>PHONE</th>
        <th>ADDRESS</th>
        <th>CITY</th>
        <th>ZIP CODE</th>
        <th>STATE</th>
